{
    "version": "0.2.0",
    "configurations": [
      
      {
        "type": "node",
        "request": "launch",
        "name": "Launch API",
        "program": "${workspaceFolder}/bin/www"
      },
      {
      "name": "Test Api",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/api/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--no-cache"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229,
      "cwd": "${workspaceRoot}/api",
      "sourceMaps": false,
    }
    ]
  }